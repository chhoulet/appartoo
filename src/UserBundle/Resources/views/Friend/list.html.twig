{% extends '::base.html.twig' %}

	{% block title %}Friends list{% endblock %}

	{% block body %}

        <div class="container">

    		<div class="row">
                <div class="box">
                    <div class="col-lg-12">
                        <hr>
                        <h2 class="intro-text text-center">List of
                            <strong>friends </strong>
                        </h2>
                        <hr>
                    </div>

                    {% for message in app.session.flashBag.get('successCreate') %}
                        {{ message }}
                    {% endfor %}

                    {% for messag in app.session.flashBag.get('successDelete') %}
                        {{ messag }}
                    {% endfor %}

                    <div class="col-lg-12 text-center">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                       Friends of {{ app.user.name|capitalize }}
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <!-- Button trigger modal -->
                                        <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                                            See the list
                                        </button>
                                        <!-- Modal -->
                                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                        <h4 class="modal-title" id="myModalLabel">Friends Bonobos</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <table style="width:100%" class="table-stripped table-bordered">
                                                          <caption>Friends</caption>
                                                          <tr>
                                                            <th>Name</th>
                                                            <th>Username</th>
                                                            <th>Mail</th>
                                                            <th>Age</th>
                                                            <th>Race</th>
                                                            <th>Family</th>
                                                            <th>Food</th>
                                                            <th>Actions</th>
                                                          </tr>
                                                            {% for friend in friends %}
                                                                <tr>
                                                                    <td>{{ friend.name }}</td>
                                                                    <td>{{ friend.username }}</td>
                                                                    <td>{{ friend.email }}</td>
                                                                    <td>{{ friend.age }}</td>
                                                                    <td>{{ friend.race }}</td>
                                                                    <td>{{ friend.family }}</td>
                                                                    <td>{{ friend.food }}</td>
                                                                    <td>
                                                                        <a href="{{ path('user_friend_show',{id:friend.id}) }}">See the profil</a><br>
                                                                        <a href="{{ path('user_friend_editFriend',{id:friend.id}) }}">Update</a>    
                                                                    </td>
                                                                </tr>                                           
                                                            {% endfor %}
                                                    </table>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>              
                                                        <a href="{{ path('user_friend_delete') }}"><button type="button" class="btn btn-info" >Delete Friends </button></a>                                
                                                    </div>
                                                </div>
                                                <!-- /.modal-content -->
                                            </div>
                                            <!-- /.modal-dialog -->
                                        </div>
                                        <!-- /.modal -->
                                    </div>
                            <!-- .panel-body -->
                                </div>
                        <!-- /.panel -->
                             </div>                                        
                        </div>
                        <hr>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="box">
                    <div class="col-lg-12">
                        <hr>
                        <h2 class="intro-text text-center">Add a
                            <strong>friend </strong>
                        </h2>
                        <hr>
                    </div>
                    <div class="col-lg-12 text-center">
                    	{{form_start(form)}}
                    	{{form_row(form.users)}}
                    	<div class="col-md-12 text-center">
                    		{{form_end(form)}}
                    	</div>
                    </div>
                </div>
            </div>                          
        </div>

	{% endblock %}